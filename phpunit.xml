<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="./vendor/autoload.php"
         colors="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
>
    <testsuites>
        <testsuite name="Integration_Tests">
            <directory suffix=".php">./tests/ConnectWise/integration</directory>
        </testsuite>
        <testsuite name="Unit_Tests">
            <directory suffix=".php">./tests/ConnectWise/unit</directory>
        </testsuite>
        <testsuite name="Full_Package">
            <directory suffix=".php">./tests/ConnectWise</directory>
        </testsuite>
    </testsuites>
</phpunit>